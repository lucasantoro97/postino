# IMAP
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USERNAME=you@example.com
IMAP_PASSWORD=app-password
IMAP_FOLDER_INBOX=INBOX
IMAP_DRAFTS_FOLDER=Drafts
IMAP_SENT_FOLDER=Sent
IMAP_REPLIED_FOLDER=Replied
IMAP_FILING_MODE=move
IMAP_CREATE_FOLDERS_ON_STARTUP=true
IMAP_SKIP_ANSWERED=true
IMAP_INITIAL_LOOKBACK_DAYS=0
IMAP_RECONCILE_LOOKBACK_DAYS=30
DEADLINE_REGEX_FALLBACK=false
# Some IMAP servers require folders under INBOX namespace (e.g. INBOX.ToReply)
# IMAP_MAILBOX_PREFIX=INBOX.

# Agent
POLL_SECONDS=60
TZ=UTC
LOG_LEVEL=INFO
PARSER_DEBUG=false

# Recaps and digests
EXECUTIVE_BRIEF_ENABLED=true
EXECUTIVE_BRIEF_TIME_LOCAL=07:30
EXECUTIVE_BRIEF_LOOKBACK_HOURS=24
EXECUTIVE_BRIEF_TO=
EXECUTIVE_BRIEF_SUBJECT_PREFIX=[Executive Brief]

DAILY_RECAP_ENABLED=true
DAILY_RECAP_TIME_LOCAL=18:00
DAILY_RECAP_LOOKBACK_HOURS=24
DAILY_RECAP_TO=
DAILY_RECAP_SUBJECT_PREFIX=[Daily Recap]

WEEKLY_RECAP_ENABLED=true
WEEKLY_RECAP_DAY_LOCAL=Mon
WEEKLY_RECAP_TIME_LOCAL=08:00
WEEKLY_RECAP_LOOKBACK_DAYS=7
WEEKLY_RECAP_TO=
WEEKLY_RECAP_SUBJECT_PREFIX=[Weekly Recap]

REPLIED_DIGEST_ENABLED=true
# Hourly by default:
REPLIED_DIGEST_INTERVAL_MINUTES=60
# Lookback window used to build the digest (prevents duplicates):
REPLIED_DIGEST_LOOKBACK_MINUTES=60
# Legacy (no longer used for scheduling):
REPLIED_DIGEST_TIME_LOCAL=18:15
REPLIED_DIGEST_TO=
REPLIED_DIGEST_SUBJECT_PREFIX=[Reply Digest]

# OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_MODEL=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Google Calendar
GOOGLE_CALENDAR_ID=primary
# Host path to your downloaded OAuth client JSON (used by `docker compose --profile auth ... auth-google`)
GOOGLE_OAUTH_CLIENT_SECRET_JSON=./secrets/google_client.json
